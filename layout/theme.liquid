<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {{ 'daybreak.css' | asset_url | stylesheet_tag: preload: true }}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Fonts %}
    <link href="https://use.typekit.net/dfy6bkp.css" rel="preload" as="style">
    <link rel="stylesheet" href="https://use.typekit.net/dfy6bkp.css">

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {%  comment %}
      {% if template == 'index' %}
        {% render 'floating-video' %}
      {% endif %}
    {% endcomment %}

    {% sections 'footer-group' %}
  </body>
</html>
