<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Fonts %}
    {% render 'fonts' %}

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'daybreak.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {%  comment %}
      {% if template == 'index' %}
        {% render 'floating-video' %}
      {% endif %}
    {% endcomment %}

    {% sections 'footer-group' %}
  </body>
</html>
