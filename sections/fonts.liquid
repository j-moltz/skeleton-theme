{% style %}
  #fonts-{{section.id}} {
    margin: 1rem 2rem;
  }
  .grid-container {
    width: 100%;
    overflow-x: auto;
    margin-bottom: 32px;
    -webkit-overflow-scrolling: touch;
  }
  .font-grid {
    display: grid;
    grid-template-columns: 200px repeat(3, 1fr);
    border: 1px solid #ddd;
  }
  .grid-header, .grid-cell {
    padding: 12px;
    border: 1px solid #ddd;
    text-align: left;
    white-space: nowrap;
  }
  .grid-header {
    background-color: #f5f5f5;
    position: sticky;
    top: 0;
  }
  .section-header {
    margin: 32px 0 16px;
  }
  .font-controls {
    display: flex;
    gap: 20px;
    margin: 3rem auto 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .control-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .text-controls {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 2rem auto;
    justify-content: center;
    max-width: 300px;
  }
  .text-control-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-width: 250px;
  }
  .text-input {
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .textarea-input {
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    min-height: 100px;
    resize: vertical;
  }
  .text-label {
    font-weight: 600;
  }
  .font-italic {
    font-style: italic;
  }
  .text-uppercase {
    text-transform: uppercase;
  }
{% endstyle %}

<div id="fonts-{{section.id}}">
  <div class="font-controls">
    <label class="control-item">
      <input type="checkbox" id="italic-toggle-{{section.id}}" class="italic-toggle">
