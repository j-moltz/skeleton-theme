<script>
  const fontSection = document.getElementById('fonts-{{section.id}}');
  const italicToggle = document.getElementById('italic-toggle-{{section.id}}');
  const uppercaseToggle = document.getElementById('uppercase-toggle-{{section.id}}');
  const headingTextInput = document.getElementById('heading-text-{{section.id}}');
  const paragraphTextInput = document.getElementById('paragraph-text-{{section.id}}');
  const allCellElements = fontSection.querySelectorAll('.grid-cell:not(:nth-child(4n+1))');
  const headingElements = fontSection.querySelectorAll('.font-table-heading');
  const paragraphElements = fontSection.querySelectorAll('.grid-cell p');
  const smallElements = fontSection.querySelectorAll('.grid-cell small');

  italicToggle.addEventListener('change', function() {
    allCellElements.forEach(cell => {
      if (this.checked) {
        cell.classList.add('font-italic');
      } else {
        cell.classList.remove('font-italic');
      }
    });
  });

  uppercaseToggle.addEventListener('change', function() {
    allCellElements.forEach(cell => {
      if (this.checked) {
        cell.classList.add('text-uppercase');
      } else {
        cell.classList.remove('text-uppercase');
      }
    });
  });

  headingTextInput.addEventListener('input',function() {
    const newText = this.value || 'Heading';
    headingElements.forEach(element => {
      element.textContent = newText;
    });
  });
  paragraphTextInput.addEventListener('input', function() {
    const newText = this.value || 'Paragraph';
    paragraphElements.forEach(element => {
      element.textContent = newText;
    });
    smallElements.forEach(element => {
      element.textContent = newText;
    });
  });
</script>

