{% style %}
  #Banner-{{ section.id }} {
    width: 100%;
    height: 100%;
    /* height: calc(100svh - 152px); */
    position: relative;
    aspect-ratio: {{ section.settings.mobile_image.aspect_ratio }};
  }
  #Banner-{{ section.id }}::after {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* height: calc(100svh - 152px); */
    background-color: black;
    opacity: 0.{{ section.settings.image_overlay_opacity }};
  }
  .hero-image-overlay {
    width: 100%;
    height: 100%;
    /* height: calc(100svh - 152px); */
  }
  .hero-image-desktop {
    object-fit: cover;
    display: none;
  }
  .hero-image-mobile {
    object-fit: cover;
    display: block;
  }
  .hero-mobile-desktop-image {
    height: 70vh;
  }
  #hero-homepage-text-block-{{ section.id }} {
    z-index: 1;
    position: absolute;
    top: 0%;
    bottom: initial;
    margin-top: auto;
    margin-bottom: auto;
    justify-content: center;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 35% 1.5rem 0;
    margin: 0;
    left: 0%;
    right: auto;
  }
  #herohome-hero-text-{{ section.id }} {
    font-size: 2rem;
  	font-size: clamp(1.5rem, 0.8576rem + 3.4261vw, 2.5rem);
  	color: {{ section.settings.heading_color_mobile }};
  	margin: 0;
  	padding: 0;
  	line-height: 1.2;
  	text-align: {{ section.settings.mobile_text_align }};
  	text-wrap: balance;
  }
  .herohome-subheading-text {
  	font-size: 1.1rem;
    font-weight: 400;
  	color: {{ section.settings.subheading_color_mobile }};
    background-color: rgb(0 0 0 / {{ section.settings.text_overlay_opacity_mobile }}%);
  	margin-top: 0;
  	margin-bottom: 0;
    margin-right: auto;
  	margin-left: auto;
    padding: 0;
  	line-height: 1.35;
  	text-align: {{ section.settings.mobile_text_align }};
  	text-wrap: pretty;
    max-width: 100%;
  }
  #hero-homepage-btn-container-{{ section.id }} {
    width: 100%;
    margin: 1.25rem 0 0 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  #hero-homepage-btn-container-{{ section.id }} > a {
    text-decoration: none;
    margin-right: 0;
  }
  .hero-homepage-btn {
    min-width: 150px;
    font-size: 1rem;
    text-align: center;
    margin: 0;
  }
  .hero-homepage-btn-secondary {
    margin-top: 0.625rem;
    color: var(--white);
    background-color: transparent;
    border: 1px solid var(--white);
  }
  @media screen and (min-width: 500px){
    #hero-homepage-text-block-{{ section.id }} {
      padding-top: 7rem;
      padding-right: 9%;
      padding-left: 9%;
  }
  @media screen and (min-width: 768px){
    #Banner-{{ section.id }} {
      width: 100%;
      max-height: 80vh;
      aspect-ratio: {{ section.settings.image.aspect_ratio }};
    }
    .hero-image-overlay {
      height: 100%;
    }
    .hero-image-desktop {
      display: block;
    }
    .hero-image-mobile {
      display: none;
    }
    #hero-homepage-text-block-{{ section.id }} {
      height: 100%;
      width: 50%;
      top: 0;
      left: 0;
      padding-top: 5rem;
      padding-bottom: 0;
      padding-right: 0;
      {% if section.settings.desktop_text_align == 'center' %}
        left: 25%;
        padding-left: 0;
      {% else %}
        left: 0;
        padding-left: 10%;
      {% endif %}
      bottom: initial;
      margin-top: 0;
      margin-bottom: auto;
      margin-right: auto;
      margin-left: auto;
      margin-right: auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    #herohome-hero-text-container-{{ section.id }} {
      display: block;
      height: auto;
    }
  	#herohome-hero-text-{{ section.id }} {
      /* font-size: 2rem; */
      /* font-size: clap(); */
      width: 100%;
      color: {{ section.settings.heading_color_desktop }};
      margin-top: 0;
      margin-bottom: 0;
      margin-right: auto;
  	  margin-left: auto;
      text-align: {{ section.settings.desktop_text_align }};
  	}
  	.herohome-subheading-text {
      background-color: rgb(0 0 0 / {{ section.settings.text_overlay_opacity_desktop }}%);
      font-size: 1rem;
      color: {{ section.settings.subheading_color_desktop }};
      text-align: {{ section.settings.desktop_text_align }};
      margin-top: 0;
      margin-bottom: 0;
      {% if section.settings.desktop_text_align  == 'center' %}
        margin-right: 0;
      {% else %}
        margin-right: auto;
      {% endif %}
  	  margin-left: 0;
      padding: 0;
  	}
    .herohome-subheading-text:first-child {
      margin-top: 1rem;
    }
    #hero-homepage-btn-container-{{ section.id }} {
      margin: 1.5rem 0 0 0;
      {% if section.settings.desktop_text_align == 'center' %}
        justify-content: center;
      {% else %}
        justify-content: start;
      {% endif %}
      padding: 0;
      flex-direction: row;
    }
    #hero-homepage-btn-container-{{ section.id }} > a {
      width: auto;
    }
    #hero-homepage-btn-container-{{ section.id }} a:first-child {
      margin-right: 0.625rem;
    }
    .hero-homepage-btn {
      font-size: .8rem;
      min-width: 168px;
      max-width: 300px;
      padding: .875rem 2.375rem;
      color: var(--color-four);
      background-color: var(--color-primary);
      border: 1px solid var(--color-primary);
    }
    .hero-homepage-btn-secondary {
      margin-top: 0;
      color: var(--color-primary);
      background-color: var(--color-white);
      border: 1px solid var(--color-primary);
    }
  }
  @media screen and (min-width: 975px){
    .herohome-subheading-text {
      font-size: 1.25rem;
    }
    .hero-homepage-btn {
      font-size: .875rem;
    }
  }
{% endstyle %}
<div id="Banner-{{ section.id }}" class="hero-homepage">
  {% if section.settings.image != blank %}
    {% liquid
      assign sizes = '100vw'
      assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
      assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
      assign image_class = 'hero-image-overlay hero-image-desktop'
      assign mobile_class_backup = 'hero-image-overlay hero-image-mobile hero-mobile-desktop-image'
      assign mobile_widths = '375, 550, 750, 1000'
      assign mobile_image_height = section.settings.mobile_image.width | divided_by: section.settings.mobile_image.aspect_ratio
      assign mobile_class = 'hero-image-overlay hero-image-mobile'
    %}
    {{
      section.settings.image
      | image_url: width: 3000
      | image_tag: width: section.settings.image.width, height: image_height, class: image_class, sizes: sizes, widths: widths, fetch_priority: 'high'
    }}
    {% if section.settings.mobile_image %}
      {{
        section.settings.mobile_image
        | image_url: width: 1000
        | image_tag:
          width: section.settings.mobile_image.width,
          height: mobile_image_height,
          class: mobile_class,
          sizes: sizes,
          widths: mobile_widths,
          fetch_priority: 'high',
          loading: 'eager'
      }}
    {% else %}
      {{
        section.settings.image
        | image_url: width: 1000
        | image_tag:
          width: section.settings.image.width,
          height: image_height,
          class: mobile_class_backup,
          sizes: sizes,
          widths: mobile_widths,
          fetch_priority: 'high'
      }}
    {% endif %}
  {% else %}
    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
  {% endif %}
  {% comment %} text {% endcomment %}
  <div id="hero-homepage-text-block-{{ section.id }}">
    <div id="herohome-hero-text-container-{{ section.id }}" style="width: 100%;">
      {% if section.settings.heading_text != blank %}
        <h2 id="herohome-hero-text-{{ section.id }}" class="tw-font-extrabold">
          {{ section.settings.heading_text }}
        </h2>
      {% endif %}
    </div>
    <div style="width: 100%;">
      {% if section.settings.subheading_text != blank %}
        <p class="herohome-subheading-text">
          {{ section.settings.subheading_text }}
        </p>
        <p class="herohome-subheading-text">
          {{ section.settings.subheading_text_line2 }}
        </p>
      {% endif %}
    </div>
    <div id="hero-homepage-btn-container-{{ section.id }}">
      {% if section.settings.button_label != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="hero-homepage-btn daybreak-button"
        >
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
      {% if section.settings.button_label_2 != blank %}
        <a
          href="{{ section.settings.button_link_2 }}"
          class="hero-homepage-btn hero-homepage-btn-secondary daybreak-button"
        >
          {{ section.settings.button_label_2 | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Homepage Hero",
  "tag": "section",
  "class": "homepage-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Default Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "header",
      "content": "Homepage Text"
    },
    {
      "type": "inline_richtext",
      "id": "heading_text",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subheading_text",
      "label": "Subheading 1"
    },
    {
      "type": "inline_richtext",
      "id": "subheading_text_line2",
      "label": "Subheading line 2"
    },
    {
      "type": "header",
      "content": "Text Positions"
    },
    {
      "type": "select",
      "id": "mobile_text_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Mobile Text Align"
    },
    {
      "type": "select",
      "id": "desktop_text_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Desktop Text Align"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "heading_color_mobile",
      "label": "Heading Color Mobile",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "heading_color_desktop",
      "label": "Heading Color Desktop",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subheading_color_mobile",
      "label": "Subheading Color Mobile",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subheading_color_desktop",
      "label": "Subheading Color Desktop",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Button label 2"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Link 2"
    },
    {
      "type": "header",
      "content": "Overlays"
    },
    {
      "type": "range",
      "id": "text_overlay_opacity_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Text Overlay Opacity Mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "text_overlay_opacity_desktop",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Text Overlay Opacity Desktop",
      "default": 0
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Image Overlay Opacity",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Homepage Hero",
      "settings": {}
    }
  ]
}
{% endschema %}
