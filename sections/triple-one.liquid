<style>
  #triple-one-{{ section.id }} {
    {% if section.settings.use_background_color %}
      background-color: {{ section.settings.background_color }};
    {% else %}
    background-image: url("{{ section.settings.background_image | image_url }}");
    background-size: cover;
    background-position: left;
    background-repeat: no-repeat;
    {% endif %}
  }
  .triple-one-container {
    padding-top: 2.5rem;
    padding-bottom: 3rem;
  }
  .triple-one-container p {
    font-size: 1.125rem;
  }
  .bottom-image-container {
    width: 100%;
    overflow: hidden;
    height: 200px;
  }
  .bottom-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media screen and (min-width: 768px) {
    .triple-one-item-container {
      gap: 10%;
    }
    .bottom-image-container {
      height: 250px;
    }
  }
  @media screen and (min-width: 1200px) {
    .bottom-image-container {
      height: auto;
      margin-bottom: -0.5rem;
    }
  @media screen and (min-width: 1600px) {
    .triple-one-item-container {
      gap: 14%;
    }
  }
</style>
<div id="triple-one-{{ section.id }}">
  <div class="triple-one-container page-width">
    <div class="text-center">
      {{ section.settings.main_paragraph }}
    </div>
    <div class="triple-one-item-container day-flex-m-col-d-row">
      {% for block in section.blocks %}
        <div class="triple-one-item">
          <h4 class="triple-one-item-heading text-center">{{ block.settings.heading }}</h4>
          <p class="triple-one-item-paragraph text-center">{{ block.settings.block_paragraph }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
  {% if section.settings.bottom_image %}
    <div class="bottom-image-container">
      {% liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        assign sizes = '100vw'
        assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
        assign fetch_priority = 'auto'
      %}
      {{
        section.settings.bottom_image
        | image_url: width: 3000
        | image_tag:
          width: section.settings.image.width,
          height: image_height,
          sizes: sizes,
          widths: widths,
          class: 'bottom-image',
          fetchpriority: fetch_priority
      }}
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "triple-one",
  "tag": "section",
  "class": "section",
  "max_blocks": 3,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "main_paragraph",
      "label": "Main Paragraph"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    {
      "type": "checkbox",
      "id": "use_background_color",
      "label": "Use Background Color",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "bottom_image",
      "label": "Bottom Image"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "three-block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.triple-one.blocks.three-block.settings.heading.label",
          "default": "t:sections.triple-one.blocks.three-block.settings.heading.default"
        },
        {
          "type": "text",
          "id": "block_paragraph",
          "label": "Paragraph"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "triple-one",
      "blocks": [
        {
          "type": "three-block"
        },
        {
          "type": "three-block"
        },
        {
          "type": "three-block"
        }
      ]
    }
  ]
}
{% endschema %}
